<h1> Sign Up </h1>

<%= render partial: 'layouts/errors', locals: {object: @user} %>
<%= link_to "Sign Up With Facebook", "/auth/facebook" %>
<br>
<br>
<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %> 
    <%= f.label :password %>
    <%= f.password_field :password %> 
    <br>
    <%= f.submit "Sign Up" %> 
    <% end %> 