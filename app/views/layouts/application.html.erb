<!DOCTYPE html>
<html>
  <head>
    <title>GameCollectionManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div>
  <%= link_to "Home", root_path %>
  <%= link_to "Log In", login_path %> 
  <%= link_to "Log Out", logout_path, method: :delete %> 
  <%= link_to "Sign Up", signup_path %>
  <%= link_to "My Ratings", user_path(current_user) if logged_in? %>
  
  </div>
  <div>
  <%= link_to "Add a new game", new_game_path %> 
  <%= link_to "Rate a game", games_path %>
  <%= link_to "All ratings", ratings_path %>
  <%= link_to "5-star games", ratings_five_star_ratings_path %>
  
  </div>

  <body>
    <%= yield %>
  </body>
</html>