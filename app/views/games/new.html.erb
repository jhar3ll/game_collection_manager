<h1> create a game </h1>

<%= form_for(@game) do |f| %>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %> 
    </div>
    <div>
    <p> Genres <%= f.collection_select :genre_id, Genre.all, :id, :title %> </p>
    </div>
    <p> Platforms <%= f.collection_select :platform_id, Platform.all, :id, :name %> </p>
    <%= f.submit "create game" %>
    <% end %> 